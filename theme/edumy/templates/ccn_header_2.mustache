<div class="header_top home2">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="ht_left_widget home2 float-left">
          <ul>
            {{#logo}}
              <li class="list-inline-item">
                <div class="logo-widget">
                  {{#logo_image}}<img class="img-fluid" src="{{output.get_logo_url}}" alt="{{{sitename}}}">{{/logo_image}}
                  {{#logotype}}<span>{{{ sitename }}}</span>{{/logotype}}
                </div>
              </li>
            {{/logo}}
            {{#has_library_list_blocks}}
              <li class="list-inline-item">
                <div class="header_top_lang_widget">
                  <div class="ht-widget-container">
                    <div class="vertical-wrapper">
                      <h2 class="title-vertical">
                        <span class="text-title">{{#str}}library, theme_edumy{{/str}}</span> <i class="fa fa-angle-down show-down" aria-hidden="true"></i>
                      </h2>
                      <div class="content-vertical">
                        {{{ library_list_blocks }}}
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            {{/has_library_list_blocks}}
            {{#has_navbar_blocks}}
              <li class="list-inline-item">
                <div class="ht_search_widget">
                  <div class="header_search_widget home2">
                    {{{ navbar_blocks }}}
                  </div>
                </div>
              </li>
            {{/has_navbar_blocks}}
          </ul>
        </div>
        <div class="ht_right_widget float-right">
          <ul class="text-right">
            <li class="list-inline-item"><a href="tel:{{{phone}}}">{{{phone}}}</a></li>
            {{!<li class="list-inline-item">
              <div class="header_top_lang_widget">
                <select class="selectpicker show-tick">
                  <option>English</option>
                  <option>Frenc</option>
                  <option>Italian</option>
                  <option>Spanish</option>
                  <option>Turkey</option>
                </select>
              </div>
            </li>}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Main Header Nav -->
<header class="header-nav home2 style_one navbar-scrolltofixed main-menu">
  <div class="container">
    <!-- Ace Responsive Menu -->
    <nav>
      <!-- Menu Toggle btn-->
      <div class="menu-toggle">
        <button type="button" id="menu-btn">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <!-- Responsive Menu Structure-->
      <!--Note: declare the Menu style in the data-menu-style="horizontal" (options: horizontal, vertical, accordion) -->
      <ul id="respMenu" class="ace-responsive-menu" data-menu-style="horizontal">
        {{{ output.custom_menu }}}
        {{> theme_edumy/ccn_navbar_user }}
      </ul>
      <ul class="sign_up_btn pull-right dn-smd mt20">
        <li class="list-inline-item"><a href="{{{cta_link}}}" class="btn btn-md"><i class="flaticon-megaphone"></i><span class="dn-md">{{{cta_text}}}</span></a></li>
        {{> theme_edumy/ccn_navbar_user_popup }}
      </ul><!-- Button trigger modal -->
    </nav>
    <!-- End of Responsive Menu -->
  </div>
</header>
